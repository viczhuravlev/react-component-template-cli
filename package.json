{
  "name": "react-component-template-cli",
  "description": "Quickly create new react components",
  "version": "1.0.0",
  "main": "lib/index.js",
  "bin": {
    "rct": "lib/index.js"
  },
  "repository": "https://github.com/viczhuravlev/react-component-template-cli.git",
  "author": "viczhuravlev <vzhuravlev15@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./lib/index.js",
    "build": "NODE_ENV=production yarn clean && tsc --build tsconfig.json",
    "clean": "rm -rf lib",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:source:error && npm run lint:types",
    "lint:source": "eslint './src/**/*.{js,ts}'",
    "lint:source:error": "eslint './src/**/*.{js,ts}' --quiet",
    "lint:types": "npm run lint:types:check && npm run lint:types:coverage",
    "lint:types:check": "tsc --noEmit",
    "lint:types:coverage": "type-coverage",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "typeCoverage": {
    "strict": true,
    "atLeast": 100,
    "ignoreCatch": true,
    "project": "tsconfig.json"
  },
  "dependencies": {
    "minimist": "1.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/jest": "26.0.20",
    "@types/minimist": "1.2.1",
    "@types/node": "14.14.20",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "4.2.1",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "type-coverage": "2.14.8",
    "typescript": "4.1.3"
  }
}
